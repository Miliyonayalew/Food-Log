<% content_for :title do %>
  Categories &ndash; <%= DateTime.now.strftime("%B %e, %Y") %>
<%end%>
<div class="columns mt-6 is-centered">
  <% @categories.each do |category| %>
    <div class="column is-one-quarter">
      <div class="card">
        <%= render category %>
      <div class="card-footer">
          <%= link_to "Edit", edit_category_path(category), class: "card-footer-item" %>
          <%= link_to "Delete", category_path(category), data: { turbo_method: :delete, turbo_confirm: "Are you  sure?"}, class: "card-footer-item" %>
      </div>
      </div>
    </div>
  <% end %>
</div>
<div class="column has-text-centered">
<%= link_to "New category", new_category_path, class:"button is-primary" %>
</div>

