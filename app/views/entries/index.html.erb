<% content_for :title do %>
  Foodlog &ndash; <%= DateTime.now.strftime("%B %e, %Y") %>
<%end%>
<div class="columns mt-6 is-centered is-multiline">
  <% @entries.each do |entry| %>
    <div class="column is-one-quarter">
      <div class="card">
        <%= render entry %>
      <div class="card-footer">
          <%= link_to "Show", entry, class: "card-footer-item" %>
          <%= link_to "Edit", edit_entry_path(entry), class: "card-footer-item" %>
          <%= link_to "Delete", entry_path(entry), data: { turbo_method: :delete, turbo_confirm: "Are you  sure?"}, class: "card-footer-item" %>
      </div>
      </div>
    </div>
  <% end %>
</div>

<div class="column has-text-centered mt-6">
  <%= link_to "View all entries", archives_index_path, class: "button is-link is-outlined"%>
</div>